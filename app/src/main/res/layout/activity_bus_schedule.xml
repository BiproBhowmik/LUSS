<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusSchedule"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/bacgroundcolor"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="center"
        android:weightSum="2">

        <android.support.v7.widget.CardView
            android:id="@+id/busScheduleRegular"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:clickable="true"
            app:cardBackgroundColor="@color/whide"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_regular_bus"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regular"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/days_later"
                android:textColor="#000"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/busScheduleExam"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:clickable="true"
            app:cardBackgroundColor="@color/whide"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_exam_bus"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exam"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/days_later"
                android:textColor="#000"
                />

        </android.support.v7.widget.CardView>


    </LinearLayout>

</LinearLayout>