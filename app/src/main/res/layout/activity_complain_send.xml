<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bacgroundcolor"
    tools:context=".ComplainSend">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Send your Complain to the Admin"
                android:fontFamily="@font/insomnia_regular"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/josefinsans_bolditalic"
                android:text="Note :\n1. Only Admin will be able to see your Complain."
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/josefinsans_bolditalic"
                android:text="2. Image upload is not mendatory"
                android:textColor="@color/bttomColor2"
                android:textStyle="bold"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/pictureUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_picture_upload"
                android:background="@color/colorAccent"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/complainTitleID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Complain Title..."
                android:fontFamily="@font/josefinsans_bolditalic"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <EditText
                android:id="@+id/complainDecID"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:fontFamily="@font/insomnia_regular"
                android:hint="Details about Complain..."
                android:inputType="textMultiLine"
                android:padding="10dp" />

            <Button
                android:id="@+id/complainSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="S e n d"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/days_later"
                android:textColor="@android:color/white"
                />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>